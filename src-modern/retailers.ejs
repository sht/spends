<% const title = 'Retailers'; %>
<% const page = 'retailers'; %>

            <!-- Retailers Container -->
            <div x-data="retailersComponent" x-init="init()" class="retailers-layout container-fluid p-4 p-lg-4">

                <!-- Page Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h3 mb-0">Retailers</h1>
                        <p class="text-muted mb-0">Manage your retailers and brands</p>
                    </div>
                </div>

                <!-- Add New Retailer Card -->
                <div class="card mb-4">
                    <div class="card-header bg-body-secondary border-bottom rounded-top py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-plus-circle me-2"></i>Add New Retailer
                        </h5>
                    </div>
                    <div class="card-body">
                        <label for="retailerName" class="form-label fw-500 mb-3">Retailer Name</label>
                        <div class="d-flex gap-2">
                            <input type="text"
                                   class="form-control flex-grow-1"
                                   id="retailerName"
                                   placeholder="Enter retailer name"
                                   x-model="newRetailerName"
                                   @keydown.enter="addRetailer()">
                            <button type="button"
                                    class="btn btn-primary"
                                    style="width: 40%; white-space: nowrap;"
                                    @click="addRetailer()">
                                Add Retailer
                            </button>
                        </div>
                        <small class="text-muted d-block mt-2">Name of the retailer or store</small>
                    </div>
                </div>

                <!-- Current Retailers Card -->
                <div class="card">
                    <div class="card-header bg-body-secondary border-bottom rounded-top py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-shop me-2"></i>Current Retailers
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Is Brand</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <template x-for="retailer in retailers" :key="retailer.id">
                                        <tr>
                                            <td>
                                                <span x-text="retailer.name"></span>
                                            </td>
                                            <td>
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input"
                                                           type="checkbox"
                                                           :id="`isBrand_${retailer.id}`"
                                                           :checked="retailer.is_brand"
                                                           @change="toggleRetailerBrand(retailer)">
                                                </div>
                                            </td>
                                            <td>
                                                <button type="button"
                                                        class="btn btn-sm btn-outline-danger"
                                                        @click="deleteRetailer(retailer.id)"
                                                        title="Delete retailer">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    </template>
                                    <template x-if="retailers.length === 0">
                                        <tr>
                                            <td colspan="3" class="text-center text-muted py-4">
                                                No retailers added yet. Add one to get started.
                                            </td>
                                        </tr>
                                    </template>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </main>
    </div>
</div>