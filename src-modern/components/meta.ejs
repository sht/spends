<!-- Meta Tags -->
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="Spends Tracker - Modern purchase and warranty tracking application">
<meta name="keywords" content="spends, tracker, purchases, warranties, analytics, dashboard">
<meta name="author" content="Spends Tracker">

<!-- Open Graph Meta Tags -->
<meta property="og:title" content="<%= title %> - Spends Tracker">
<meta property="og:description" content="Track your purchases, manage warranties, and analyze spending patterns">
<meta property="og:type" content="website">

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href="/assets/icons/favicon.svg">
<link rel="icon" type="image/png" href="/assets/icons/favicon.png">

<!-- Preconnect to external domains -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

<!-- Fonts with display=swap to show fallback immediately -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<!-- Title -->
<title><%= title %> - Spends Tracker</title>

<!-- Theme Color -->
<meta name="theme-color" content="#6366f1">

<!-- PWA Manifest -->
<link rel="manifest" href="/manifest.json">

<!-- Inline critical styles to prevent FOUC -->
<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', sans-serif;
    font-size: 16px;
    -webkit-font-smoothing: antialiased;
  }
  body {
    background-color: #ffffff;
    color: #000000;
  }
  .loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    opacity: 1;
  }
  .spinner-border {
    display: inline-block;
    width: 2rem;
    height: 2rem;
    vertical-align: text-bottom;
    border: 0.25em solid currentColor;
    border-right-color: transparent;
    border-radius: 50%;
    animation: spinner-border 0.75s linear infinite;
  }
  @keyframes spinner-border {
    to { transform: rotate(360deg); }
  }
  .text-primary {
    color: #6366f1 !important;
  }
</style>
