<% const title = 'Dashboard'; %>
<% const page = 'dashboard'; %>

<!-- Page Header -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
    <div>
        <h1 class="h3 mb-0">Dashboard</h1>
        <p class="text-muted mb-0">Track your purchase, manage warranties, and analyze spendings.</p>
    </div>
    <div class="d-flex gap-2 flex-shrink-0">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newItemModal">
            <i class="bi bi-plus-lg me-2"></i>
            <span class="d-none d-sm-inline">Add New Purchase</span>
        </button>
        <button type="button" class="btn btn-outline-secondary"
                data-bs-toggle="tooltip"
                title="Refresh data"
                onclick="window.dashboardManager && window.dashboardManager.loadDashboardData()">
            <i class="bi bi-arrow-clockwise icon-hover"></i>
        </button>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-2 g-lg-3 mb-4" id="kpi-cards" x-data="dashboardCards()" x-init="initCardVisibility()">
    <div class="col-lg-4" x-show="cardVisibility.totalAssetsValue" x-transition>
        <div class="card stats-card" data-kpi="total-value">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="stats-icon bg-primary bg-opacity-10 text-primary">
                            <i class="bi bi-wallet2"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-0 text-muted">Total Asset Value</h6>
                        <h3 class="mb-0 kpi-value">$0</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4" x-show="cardVisibility.itemsCount" x-transition>
        <div class="card stats-card" data-kpi="items-count">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="stats-icon bg-success bg-opacity-10 text-success">
                            <i class="bi bi-box-seam"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-0 text-muted">Items Count</h6>
                        <h3 class="mb-0 kpi-value">0</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4" x-show="cardVisibility.avgPrice" x-transition>
        <div class="card stats-card" data-kpi="avg-price">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="stats-icon bg-warning bg-opacity-10 text-warning">
                            <i class="bi bi-tag"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-0 text-muted">Average Price</h6>
                        <h3 class="mb-0 kpi-value">$0</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4" x-show="cardVisibility.pendingWarranties" x-transition>
        <div class="card stats-card" data-kpi="active-warranties">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="stats-icon bg-info bg-opacity-10 text-info">
                            <i class="bi bi-hourglass-split"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-0 text-muted">Active Warranties</h6>
                        <h3 class="mb-0 kpi-value">0</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4" x-show="cardVisibility.taxDeductible" x-transition>
        <div class="card stats-card" data-kpi="tax-deductible">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="stats-icon bg-info bg-opacity-10 text-info">
                            <i class="bi bi-bank"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-0 text-muted">Tax Deductible</h6>
                        <h3 class="mb-0 kpi-value">0</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4" x-show="cardVisibility.expiredWarranties" x-transition>
        <div class="card stats-card" data-kpi="expired-warranties">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="stats-icon bg-info bg-opacity-10 text-danger">
                            <i class="bi bi-calendar-x"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-0 text-muted">Expired Warranties</h6>
                        <h3 class="mb-0 kpi-value">0</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart Section -->

<!-- Warranty Timeline - Full Width -->
<div class="row g-4 mb-4">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Warranty Timeline</h5>
            </div>
            <div class="card-body">
                <canvas id="warrantyChart" height="250"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Retailers and Brands - Side by Side -->
<div class="row g-4 mb-4">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Retailers</h5>
            </div>
            <div class="card-body">
                <canvas id="orderStatusChart" height="250"></canvas>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Brands</h5>
            </div>
            <div class="card-body">
                <canvas id="orderStatusChart" height="250"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Spendings over time - Full Width -->
<div class="row g-4 mb-4">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Spendings over time</h5>
            </div>
            <div class="card-body">
                <canvas id="spendingChart" height="250"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Widgets Row -->
<div class="row g-4 mb-4">
    <!-- Top 10 Purchases -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Top 10 Purchases</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Product</th>
                                <th>Brand</th>
                                <th>Price</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody id="top-products-table">
                            <!-- Top 10 products will be injected here by dashboard.js -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Recent 10 Purchases -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Recent 10 Purchases</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Product</th>
                                <th>Brand</th>
                                <th>Price</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody id="recent-orders-table">
                            <!-- Orders will be injected here by dashboard.js -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Purchase Modal -->
<div class="modal fade" id="newItemModal" tabindex="-1" aria-labelledby="newItemModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content" x-data="addPurchaseForm()">
            <div class="modal-header border-bottom">
                <h5 class="modal-title" id="newItemModalLabel">
                    <i :class="isEditMode ? 'bi bi-pencil-circle' : 'bi bi-plus-circle'" class="text-primary me-2"></i>
                    <span x-text="isEditMode ? 'Edit Purchase' : 'Add New Purchase'"></span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <%- include('purchase-form.ejs') %>
            </div>
            <div class="modal-footer border-top">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" @click="savePurchase()">
                    <i class="bi bi-check-lg me-1"></i> <span x-text="isEditMode ? 'Update Purchase' : 'Save Purchase'"></span>
                </button>
            </div>
        </div>
    </div>
</div>
