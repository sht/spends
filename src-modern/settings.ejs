<% const title = 'Settings'; %>
<% const page = 'settings'; %>

            <!-- Settings Container -->
            <div x-data="settingsComponent" x-init="init()" class="settings-layout container-fluid p-4 p-lg-4">

                <!-- Page Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h3 mb-0">Settings</h1>
                        <p class="text-muted mb-0">Manage your application preferences and configuration</p>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-primary" @click="saveSettings()">
                            <i class="bi bi-check-lg me-2"></i>Save Changes
                        </button>
                    </div>
                </div>

                            <!-- General Settings Section -->
                            <div class="settings-section">
                                <div class="card">
                                    <div class="card-header bg-body-secondary border-bottom rounded-top py-3">
                                        <h5 class="mb-0">
                                            <i class="bi bi-sliders me-2"></i>General Settings
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row g-4">
                                            <!-- Date Format -->
                                            <div class="col-md-6">
                                                <label for="dateFormat" class="form-label fw-500">Date Format</label>
                                                <select id="dateFormat" class="form-select" x-model="settings.dateFormat">
                                                    <option value="">Select a format...</option>
                                                    <option value="short">Jan 30, 2026 (Short)</option>
                                                    <option value="MM/DD/YYYY">01/30/2026 (US)</option>
                                                    <option value="DD/MM/YYYY">30/01/2026 (UK)</option>
                                                    <option value="YYYY-MM-DD">2026-01-30 (ISO)</option>
                                                    <option value="DD.MM.YYYY">30.01.2026 (Europe)</option>
                                                </select>
                                                <small class="text-muted d-block mt-1">Choose how dates are displayed throughout the application</small>
                                            </div>

                                            <!-- Currency Code -->
                                            <div class="col-md-6">
                                                <label for="currencyCode" class="form-label fw-500">Currency Code</label>
                                                <select id="currencyCode" class="form-select" x-model="settings.currencyCode">
                                                    <option value="">Select a currency...</option>
                                                    <option value="USD">USD - US Dollar</option>
                                                    <option value="EUR">EUR - Euro</option>
                                                    <option value="GBP">GBP - British Pound</option>
                                                    <option value="JPY">JPY - Japanese Yen</option>
                                                    <option value="CAD">CAD - Canadian Dollar</option>
                                                    <option value="AUD">AUD - Australian Dollar</option>
                                                    <option value="CHF">CHF - Swiss Franc</option>
                                                    <option value="CNY">CNY - Chinese Yuan</option>
                                                    <option value="INR">INR - Indian Rupee</option>
                                                </select>
                                                <small class="text-muted d-block mt-1">Set your preferred currency for financial displays</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Dashboard Settings Tab -->
                            <!-- Dashboard Settings Section -->
                            <div class="settings-section">
                                <div class="card">
                                    <div class="card-header bg-body-secondary border-bottom rounded-top py-3">
                                        <h5 class="mb-0">
                                            <i class="bi bi-speedometer2 me-2"></i>Card Visibility
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="text-muted mb-4">Toggle which dashboard cards are visible on your dashboard</p>
                                        <div class="row g-4">
                                            <!-- Total Assets Value -->
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-3 border rounded-2 bg-body-secondary-subtle">
                                                    <div>
                                                    <div>
                                                        <h6 class="mb-1">Average Price</h6>
                                                        <small class="text-muted">Show average item price</small>
                                                    </div>
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="toggleAvgPrice" x-model="settings.cardVisibility.avgPrice">
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Pending Warranties -->
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-3 border rounded-2 bg-body-secondary-subtle">
                                                    <div>
                                                        <h6 class="mb-1">Pending Warranties</h6>
                                                        <small class="text-muted">Display items with active warranties</small>
                                                    </div>
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="togglePendingWarranties" x-model="settings.cardVisibility.pendingWarranties">
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Tax Deductible -->
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-3 border rounded-2 bg-body-secondary-subtle">
                                                    <div>
                                                        <h6 class="mb-1">Tax Deductible</h6>
                                                        <small class="text-muted">Show tax deductible items count</small>
                                                    </div>
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="toggleTaxDeductible" x-model="settings.cardVisibility.taxDeductible">
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Expired Warranties -->
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-3 border rounded-2 bg-body-secondary-subtle">
                                                    <div>
                                                        <h6 class="mb-1">Expired Warranties</h6>
                                                        <small class="text-muted">Display expired warranty count</small>
                                                    </div>
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="toggleExpiredWarranties" x-model="settings.cardVisibility.expiredWarranties">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Notifications Settings Tab -->
                            <!-- Notifications Settings Section -->
                            <div class="settings-section">
                                <div class="card">
                                    <div class="card-header bg-body-secondary border-bottom rounded-top py-3">
                                        <h5 class="mb-0">
                                            <i class="bi bi-bell me-2"></i>Notification Preferences
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="text-muted mb-4">Control how and when you receive notifications</p>
                                        <div class="row g-4">
                                            <!-- Desktop Notifications -->
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-3 border rounded-2 bg-body-secondary-subtle">
                                                    <div>
                                                        <h6 class="mb-1">Desktop Notifications</h6>
                                                        <small class="text-muted">Show notifications on your desktop</small>
                                                    </div>
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="toggleDesktop" x-model="settings.notifications.desktop">
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Email Notifications -->
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-3 border rounded-2 bg-body-secondary-subtle">
                                                    <div>
                                                        <h6 class="mb-1">Email Notifications</h6>
                                                        <small class="text-muted">Receive important updates via email</small>
                                                    </div>
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="toggleEmail" x-model="settings.notifications.email">
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Sound Alerts -->
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-3 border rounded-2 bg-body-secondary-subtle">
                                                    <div>
                                                        <h6 class="mb-1">Sound Alerts</h6>
                                                        <small class="text-muted">Play sounds for important notifications</small>
                                                    </div>
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="toggleSound" x-model="settings.notifications.sound">
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Marketing Updates -->
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-3 border rounded-2 bg-body-secondary-subtle">
                                                    <div>
                                                        <h6 class="mb-1">Marketing Updates</h6>
                                                        <small class="text-muted">Receive updates about new features and promotions</small>
                                                    </div>
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="toggleMarketing" x-model="settings.notifications.marketing">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Retailer Settings Tab -->
                            <!-- Retailer Settings Section -->
                            <div class="settings-section">

                                <!-- Add New Retailer Card -->
                                <div class="card mb-4">
                                    <div class="card-header bg-body-secondary border-bottom rounded-top py-3">
                                        <h5 class="mb-0">
                                            <i class="bi bi-plus-circle me-2"></i>Add New Retailer
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <label for="retailerName" class="form-label fw-500 mb-3">Retailer Name</label>
                                        <div class="d-flex gap-2">
                                            <input type="text"
                                                   class="form-control flex-grow-1"
                                                   id="retailerName"
                                                   placeholder="Enter retailer name"
                                                   x-model="newRetailerName"
                                                   @keydown.enter="addRetailer()">
                                            <button type="button"
                                                    class="btn btn-primary"
                                                    style="width: 40%; white-space: nowrap;"
                                                    @click="addRetailer()">
                                                Add Retailer
                                            </button>
                                        </div>
                                        <small class="text-muted d-block mt-2">Name of the retailer or store</small>
                                    </div>
                                </div>

                                <!-- Current Retailers Card -->
                                <div class="card">
                                    <div class="card-header bg-body-secondary border-bottom rounded-top py-3">
                                        <h5 class="mb-0">
                                            <i class="bi bi-shop me-2"></i>Current Retailers
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover mb-0">
                                                <thead>
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>Is Brand</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <template x-for="retailer in settings.retailers" :key="retailer.id">
                                                        <tr>
                                                            <td>
                                                                <span x-text="retailer.name"></span>
                                                            </td>
                                                            <td>
                                                                <div class="form-check form-switch">
                                                                    <input class="form-check-input"
                                                                           type="checkbox"
                                                                           :id="`isBrand_${retailer.id}`"
                                                                           :checked="retailer.is_brand"
                                                                           @change="toggleRetailerBrand(retailer)">
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <button type="button"
                                                                        class="btn btn-sm btn-outline-danger"
                                                                        @click="deleteRetailer(retailer.id)"
                                                                        title="Delete retailer">
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    </template>
                                                    <template x-if="settings.retailers.length === 0">
                                                        <tr>
                                                            <td colspan="3" class="text-center text-muted py-4">
                                                                No retailers added yet. Add one to get started.
                                                            </td>
                                                        </tr>
                                                    </template>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Data Management Settings Tab -->
                            <!-- Data Management Settings Section -->
                            <div class="settings-section">

                                <!-- Data Export Card -->
                                <div class="card mb-4">
                                    <div class="card-header bg-body-secondary border-bottom rounded-top py-3">
                                        <h5 class="mb-0">
                                            <i class="bi bi-download me-2"></i>Data Export
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="text-muted mb-4">Download your data in various formats</p>
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <button type="button"
                                                        class="btn btn-outline-primary w-100 py-3"
                                                        @click="exportData('json')">
                                                    <i class="bi bi-file-code me-2"></i>
                                                    <span>Export as JSON</span>
                                                </button>
                                                <small class="text-muted d-block mt-2 text-center">Machine readable format</small>
                                            </div>
                                            <div class="col-md-6">
                                                <button type="button"
                                                        class="btn btn-outline-success w-100 py-3"
                                                        @click="exportData('csv')">
                                                    <i class="bi bi-file-spreadsheet me-2"></i>
                                                    <span>Export as CSV</span>
                                                </button>
                                                <small class="text-muted d-block mt-2 text-center">Spreadsheet format</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Data Import Card -->
                                <div class="card mb-4">
                                    <div class="card-header bg-body-secondary border-bottom rounded-top py-3">
                                        <h5 class="mb-0">
                                            <i class="bi bi-upload me-2"></i>Data Import
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="text-muted mb-4">Upload and import your data from CSV or JSON files</p>
                                        <div class="input-group">
                                            <input type="file"
                                                   class="form-control"
                                                   id="importFile"
                                                   accept=".csv,.json"
                                                   @change="onFileSelected($event)">
                                            <button class="btn btn-primary"
                                                    type="button"
                                                    @click="importData()">
                                                <i class="bi bi-upload me-2"></i>Import
                                            </button>
                                        </div>
                                        <small class="text-muted d-block mt-2">Supported formats: CSV, JSON</small>
                                    </div>
                                </div>

                                <!-- Danger Zone Card -->
                                <div class="card border-danger">
                                    <div class="card-header bg-danger bg-opacity-10 border-danger">
                                        <h5 class="mb-0 text-danger">
                                            <i class="bi bi-exclamation-triangle me-2"></i>Danger Zone
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="text-muted mb-4">
                                            <strong>Warning:</strong> The following action is irreversible. Please proceed with caution.
                                        </p>
                                        <button type="button"
                                                class="btn btn-danger"
                                                @click="resetAllData()">
                                            <i class="bi bi-trash me-2"></i>Reset All Data
                                        </button>
                                    </div>
                                </div>

                                <!-- Reset Confirmation Modal -->
                                <div class="modal fade" 
                                     id="resetConfirmModal" 
                                     tabindex="-1" 
                                     aria-labelledby="resetConfirmModalLabel" 
                                     aria-hidden="true"
                                     :class="{ 'show d-block': showResetModal }"
                                     x-show="showResetModal"
                                     style="background-color: rgba(0,0,0,0.5);">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content border-danger">
                                            <div class="modal-header bg-danger bg-opacity-10 border-danger">
                                                <h5 class="modal-title text-danger" id="resetConfirmModalLabel">
                                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>⚠️ Irreversible Action
                                                </h5>
                                                <button type="button" 
                                                        class="btn-close" 
                                                        @click="closeResetModal()"
                                                        aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="alert alert-warning d-flex align-items-start mb-3">
                                                    <i class="bi bi-info-circle-fill me-2 mt-1"></i>
                                                    <div>
                                                        <strong>Recommended:</strong> Before proceeding, please <a href="#" @click.prevent="exportData('JSON')" class="alert-link">export your data</a> to create a backup. This action cannot be undone.
                                                    </div>
                                                </div>
                                                <p class="mb-3">
                                                    You are about to <strong>permanently delete</strong>:
                                                </p>
                                                <ul class="list-group list-group-flush mb-3">
                                                    <li class="list-group-item d-flex align-items-center">
                                                        <i class="bi bi-cart-x text-danger me-2"></i>All purchases
                                                    </li>
                                                    <li class="list-group-item d-flex align-items-center">
                                                        <i class="bi bi-shield-x text-danger me-2"></i>All warranties
                                                    </li>
                                                    <li class="list-group-item d-flex align-items-center">
                                                        <i class="bi bi-shop text-danger me-2"></i>All retailers
                                                    </li>
                                                    <li class="list-group-item d-flex align-items-center">
                                                        <i class="bi bi-tag text-danger me-2"></i>All brands
                                                    </li>
                                                    <li class="list-group-item d-flex align-items-center">
                                                        <i class="bi bi-file-earmark-x text-danger me-2"></i>All uploaded files
                                                    </li>
                                                    <li class="list-group-item d-flex align-items-center">
                                                        <i class="bi bi-gear text-danger me-2"></i>All settings
                                                    </li>
                                                </ul>
                                                <div class="alert alert-danger" role="alert">
                                                    <i class="bi bi-exclamation-octagon-fill me-2"></i>
                                                    <strong>This action cannot be undone.</strong> All data will be permanently erased.
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label fw-bold">Type "DELETE" to confirm:</label>
                                                    <input type="text" 
                                                           class="form-control" 
                                                           x-model="confirmReset"
                                                           placeholder="Type DELETE"
                                                           @keyup.enter="confirmReset === 'DELETE' && confirmResetData()">
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" 
                                                        class="btn btn-secondary" 
                                                        @click="closeResetModal()">
                                                    <i class="bi bi-x-lg me-2"></i>Cancel
                                                </button>
                                                <button type="button" 
                                                        class="btn btn-danger"
                                                        :disabled="confirmReset !== 'DELETE'"
                                                        @click="confirmResetData()">
                                                    <i class="bi bi-trash me-2"></i>Yes, Erase Everything
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                </div>

            </div>
        </main>
