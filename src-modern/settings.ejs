<% const title = 'Settings'; %>
<% const page = 'settings'; %>

            <!-- Settings Container -->
            <div x-data="settingsComponent" x-init="init()" class="settings-layout container-fluid p-4 p-lg-4">

                <!-- Page Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h3 mb-0">Settings</h1>
                        <p class="text-muted mb-0">Manage your application preferences and configuration</p>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-primary" @click="saveSettings()">
                            <i class="bi bi-check-lg me-2"></i>Save Changes
                        </button>
                    </div>
                </div>

                            <!-- General Settings Section -->
                            <div class="settings-section mb-4">
                                <div class="card">
                                    <div class="card-header bg-body-secondary border-bottom rounded-top py-3">
                                        <h5 class="mb-0">
                                            <i class="bi bi-sliders me-2"></i>General Settings
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row g-4">
                                            <!-- Date Format -->
                                            <div class="col-md-6">
                                                <label for="dateFormat" class="form-label fw-500">Date Format</label>
                                                <select id="dateFormat" class="form-select" x-model="settings.dateFormat">
                                                    <option value="">Select a format...</option>
                                                    <option value="short">Jan 30, 2026 (Short)</option>
                                                    <option value="MM/DD/YYYY">MM/DD/YYYY (US)</option>
                                                    <option value="DD/MM/YYYY">DD/MM/YYYY (UK)</option>
                                                    <option value="YYYY-MM-DD">YYYY-MM-DD (ISO)</option>
                                                    <option value="DD.MM.YYYY">DD.MM.YYYY (Europe)</option>
                                                </select>
                                                <small class="text-muted d-block mt-1">Choose how dates are displayed throughout the application</small>
                                            </div>

                                            <!-- Currency Code -->
                                            <div class="col-md-6">
                                                <label for="currencyCode" class="form-label fw-500">Currency Code</label>
                                                <select id="currencyCode" class="form-select" x-model="settings.currencyCode">
                                                    <option value="">Select a currency...</option>
                                                    <option value="USD">USD - US Dollar</option>
                                                    <option value="EUR">EUR - Euro</option>
                                                    <option value="GBP">GBP - British Pound</option>
                                                    <option value="JPY">JPY - Japanese Yen</option>
                                                    <option value="CAD">CAD - Canadian Dollar</option>
                                                    <option value="AUD">AUD - Australian Dollar</option>
                                                    <option value="CHF">CHF - Swiss Franc</option>
                                                    <option value="CNY">CNY - Chinese Yuan</option>
                                                    <option value="INR">INR - Indian Rupee</option>
                                                </select>
                                                <small class="text-muted d-block mt-1">Set your preferred currency for financial displays</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Dashboard Settings Tab -->
                            <!-- Dashboard Settings Section -->
                            <div class="settings-section">
                                <div class="card">
                                    <div class="card-header bg-body-secondary border-bottom rounded-top py-3">
                                        <h5 class="mb-0">
                                            <i class="bi bi-speedometer2 me-2"></i>Card Visibility
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="text-muted mb-4">Toggle which dashboard cards are visible on your dashboard</p>
                                        <div class="row g-4">
                                            <!-- Total Asset Value -->
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-3 border rounded-2 bg-body-secondary-subtle">
                                                    <div>
                                                        <h6 class="mb-1">Total Asset Value</h6>
                                                        <small class="text-muted">Show total value of all assets</small>
                                                    </div>
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="toggleTotalAssets" x-model="settings.cardVisibility.totalAssetsValue">
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Items Count -->
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-3 border rounded-2 bg-body-secondary-subtle">
                                                    <div>
                                                        <h6 class="mb-1">Items Count</h6>
                                                        <small class="text-muted">Show total number of items</small>
                                                    </div>
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="toggleItemsCount" x-model="settings.cardVisibility.itemsCount">
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Average Price -->
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-3 border rounded-2 bg-body-secondary-subtle">
                                                    <div>
                                                        <h6 class="mb-1">Average Price</h6>
                                                        <small class="text-muted">Show average item price</small>
                                                    </div>
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="toggleAvgPrice" x-model="settings.cardVisibility.avgPrice">
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Active Warranties -->
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-3 border rounded-2 bg-body-secondary-subtle">
                                                    <div>
                                                        <h6 class="mb-1">Active Warranties</h6>
                                                        <small class="text-muted">Display items with active warranties</small>
                                                    </div>
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="toggleActiveWarranties" x-model="settings.cardVisibility.pendingWarranties">
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Tax Deductible -->
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-3 border rounded-2 bg-body-secondary-subtle">
                                                    <div>
                                                        <h6 class="mb-1">Tax Deductible</h6>
                                                        <small class="text-muted">Show tax deductible items count</small>
                                                    </div>
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="toggleTaxDeductible" x-model="settings.cardVisibility.taxDeductible">
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Expired Warranties -->
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between align-items-center p-3 border rounded-2 bg-body-secondary-subtle">
                                                    <div>
                                                        <h6 class="mb-1">Expired Warranties</h6>
                                                        <small class="text-muted">Display expired warranty count</small>
                                                    </div>
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="toggleExpiredWarranties" x-model="settings.cardVisibility.expiredWarranties">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                </div>

            </div>
        </main>
