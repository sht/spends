<% const title = 'Inventory'; %>
<% const page = 'inventory'; %>

            <div class="container-fluid p-4 p-lg-5">
                
                <!-- Page Header -->
                <div class="d-flex justify-content-between align-items-center mb-4 mb-lg-5">
                    <div>
                        <h1 class="h3 mb-0">Inventory Management</h1>
                        <p class="text-muted mb-0">Manage your inventory, warranties, and purchases</p>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#inventoryModal">
                            <i class="bi bi-plus-lg me-2"></i>Add New Purchase
                        </button>
                    </div>
                </div>

                <!-- Inventory Management Container -->
                <div x-data="inventoryTable" x-init="init()">

                    <!-- Inventory Table -->
                    <div class="card inventory-card">
                        <div class="card-header">
                            <div class="row align-items-center py-3">
                                <div class="col">
                                    <h5 class="card-title mb-0">Inventory</h5>
                                </div>
                                <div class="col-auto">
                                    <div class="d-flex gap-2">
                                        <!-- Search -->
                                        <div class="position-relative">
                                            <input type="search"
                                                   class="form-control form-control-sm"
                                                   placeholder="Search inventory..."
                                                   x-model="searchQuery"
                                                   @input="filterInventory()"
                                                   style="width: 200px; padding: 0.75rem 0.5rem;">
                                            <i class="bi bi-search position-absolute top-50 end-0 translate-middle-y me-2 text-muted"></i>
                                        </div>

                                        <!-- Date Range -->
                                        <select class="form-select form-select-sm"
                                                x-model="dateFilter"
                                                @change="filterInventory()"
                                                style="width: 150px; padding: 0.75rem 0.5rem;">
                                            <option value="">All Dates</option>
                                            <option value="week">This Week</option>
                                            <option value="month">This Month</option>
                                            <option value="year">This Year</option>
                                            <option value="custom">Custom Range</option>
                                        </select>
                                        
                                        <!-- Custom Date Range Inputs (shown when custom is selected) -->
                                        <div x-bind:class="{'d-none': dateFilter !== 'custom', 'd-flex': dateFilter === 'custom'}"
                                             class="gap-2 ms-2 custom-date-range">
                                            <input type="date"
                                                   class="form-control form-control-sm"
                                                   x-model="startDate"
                                                   @change="filterInventory()">
                                            <input type="date"
                                                   class="form-control form-control-sm"
                                                   x-model="endDate"
                                                   @change="filterInventory()">
                                        </div>
                                        
                                        <!-- Column Selector Dropdown -->
                                        <div class="dropdown position-relative ms-2">
                                            <button class="btn btn-outline-secondary btn-sm" 
                                                    type="button" 
                                                    id="columnSelectorDropdown"
                                                    @click="toggleColumnSelector()"
                                                    aria-expanded="false"
                                                    title="Select columns to display">
                                                <i class="bi bi-gear-fill"></i>
                                            </button>
                                            <div class="position-absolute bg-white border rounded shadow p-3 mt-1" 
                                                 style="min-width: 250px; max-height: 400px; overflow-y: auto; z-index: 1000; right: 0;" 
                                                 x-show="showColumnSelector"
                                                 x-transition:enter="transition ease-out duration-100"
                                                 x-transition:enter-start="transform opacity-0 scale-95"
                                                 x-transition:enter-end="transform opacity-100 scale-100"
                                                 x-transition:leave="transition ease-in duration-75"
                                                 x-transition:leave-start="transform opacity-100 scale-100"
                                                 x-transition:leave-end="transform opacity-0 scale-95">
                                                <h6 class="dropdown-header">Select Columns to Display</h6>
                                                <div class="mb-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" 
                                                               type="checkbox" 
                                                               id="colProduct"
                                                               x-model="visibleColumns.product"
                                                               @change="updateColumnVisibility()">
                                                        <label class="form-check-label" for="colProduct">
                                                            Product
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="mb-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" 
                                                               type="checkbox" 
                                                               id="colRetailer"
                                                               x-model="visibleColumns.retailer"
                                                               @change="updateColumnVisibility()">
                                                        <label class="form-check-label" for="colRetailer">
                                                            Retailer
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="mb-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" 
                                                               type="checkbox" 
                                                               id="colModel"
                                                               x-model="visibleColumns.modelNumber"
                                                               @change="updateColumnVisibility()">
                                                        <label class="form-check-label" for="colModel">
                                                            Model
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="mb-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" 
                                                               type="checkbox" 
                                                               id="colPrice"
                                                               x-model="visibleColumns.price"
                                                               @change="updateColumnVisibility()">
                                                        <label class="form-check-label" for="colPrice">
                                                            Price
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="mb-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" 
                                                               type="checkbox" 
                                                               id="colDate"
                                                               x-model="visibleColumns.purchaseDate"
                                                               @change="updateColumnVisibility()">
                                                        <label class="form-check-label" for="colDate">
                                                            Date
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="mb-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" 
                                                               type="checkbox" 
                                                               id="colQuantity"
                                                               x-model="visibleColumns.quantity"
                                                               @change="updateColumnVisibility()">
                                                        <label class="form-check-label" for="colQuantity">
                                                            Quantity
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="mb-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" 
                                                               type="checkbox" 
                                                               id="colWarranty"
                                                               x-model="visibleColumns.warrantyExpiry"
                                                               @change="updateColumnVisibility()">
                                                        <label class="form-check-label" for="colWarranty">
                                                            Warranty Expiry
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="mb-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" 
                                                               type="checkbox" 
                                                               id="colSerial"
                                                               x-model="visibleColumns.serialNumber"
                                                               @change="updateColumnVisibility()">
                                                        <label class="form-check-label" for="colSerial">
                                                            Serial Number
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="mb-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" 
                                                               type="checkbox" 
                                                               id="colLink"
                                                               x-model="visibleColumns.link"
                                                               @change="updateColumnVisibility()">
                                                        <label class="form-check-label" for="colLink">
                                                            Link
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="mb-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" 
                                                               type="checkbox" 
                                                               id="colTax"
                                                               x-model="visibleColumns.taxDeductible"
                                                               @change="updateColumnVisibility()">
                                                        <label class="form-check-label" for="colTax">
                                                            Tax Deductible
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="mb-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" 
                                                               type="checkbox" 
                                                               id="colTags"
                                                               x-model="visibleColumns.tags"
                                                               @change="updateColumnVisibility()">
                                                        <label class="form-check-label" for="colTags">
                                                            Tags
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="mb-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" 
                                                               type="checkbox" 
                                                               id="colNotes"
                                                               x-model="visibleColumns.notes"
                                                               @change="updateColumnVisibility()">
                                                        <label class="form-check-label" for="colNotes">
                                                            Notes
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <!-- Bulk Actions Bar -->
                            <div class="bulk-actions-bar p-3 bg-light border-bottom" x-show="selectedItems.length > 0" x-transition>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted">
                                        <span x-text="selectedItems.length"></span> item(s) selected
                                    </span>
                                </div>
                            </div>

                            <!-- Table -->
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="sortable align-middle text-center">#</th>
                                            <template x-if="visibleColumns.product">
                                                <th class="align-middle">Product</th>
                                            </template>
                                            <template x-if="visibleColumns.retailer">
                                                <th @click="sortBy('retailer')" class="sortable align-middle">Retailer</th>
                                            </template>
                                            <template x-if="visibleColumns.modelNumber">
                                                <th @click="sortBy('modelNumber')" class="sortable align-middle">Model</th>
                                            </template>
                                            <template x-if="visibleColumns.price">
                                                <th @click="sortBy('price')" class="sortable align-middle">Price</th>
                                            </template>
                                            <template x-if="visibleColumns.purchaseDate">
                                                <th @click="sortBy('purchaseDate')" class="sortable align-middle">Date</th>
                                            </template>
                                            <template x-if="visibleColumns.quantity">
                                                <th @click="sortBy('quantity')" class="sortable align-middle">Quantity</th>
                                            </template>
                                            <template x-if="visibleColumns.warrantyExpiry">
                                                <th @click="sortBy('warrantyExpiry')" class="sortable align-middle">Warranty Expiry</th>
                                            </template>
                                            <template x-if="visibleColumns.serialNumber">
                                                <th @click="sortBy('serialNumber')" class="sortable align-middle">Serial</th>
                                            </template>
                                            <template x-if="visibleColumns.link">
                                                <th @click="sortBy('link')" class="sortable align-middle">Link</th>
                                            </template>
                                            <template x-if="visibleColumns.taxDeductible">
                                                <th @click="sortBy('taxDeductible')" class="sortable align-middle">Tax</th>
                                            </template>
                                            <template x-if="visibleColumns.tags">
                                                <th @click="sortBy('tags')" class="sortable align-middle">Tags</th>
                                            </template>
                                            <template x-if="visibleColumns.notes">
                                                <th @click="sortBy('notes')" class="sortable align-middle">Notes</th>
                                            </template>
                                            <th style="width: 100px;" class="align-middle">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <template x-for="(item, index) in paginatedItems" :key="item.id">
                                            <tr>
                                                <td class="fw-medium text-primary align-middle text-center" x-text="(currentPage - 1) * itemsPerPage + index + 1"></td>
                                                <template x-if="visibleColumns.product">
                                                    <td class="align-middle">
                                                        <div class="fw-medium" x-text="item.name"></div>
                                                        <small class="text-muted" x-text="item.brand"></small>
                                                    </td>
                                                </template>
                                                <template x-if="visibleColumns.retailer">
                                                    <td class="align-middle" x-text="item.retailer || 'N/A'"></td>
                                                </template>
                                                <template x-if="visibleColumns.modelNumber">
                                                    <td class="align-middle" x-text="item.modelNumber || 'N/A'"></td>
                                                </template>
                                                <template x-if="visibleColumns.price">
                                                    <td class="fw-medium align-middle" x-text="`$${item.price.toFixed(2)}`"></td>
                                                </template>
                                                <template x-if="visibleColumns.purchaseDate">
                                                    <td class="align-middle" x-text="item.purchaseDate"></td>
                                                </template>
                                                <template x-if="visibleColumns.quantity">
                                                    <td class="align-middle" x-text="item.quantity || 'N/A'"></td>
                                                </template>
                                                <template x-if="visibleColumns.warrantyExpiry">
                                                    <td class="align-middle" x-text="item.warrantyExpiry || 'N/A'"></td>
                                                </template>
                                                <template x-if="visibleColumns.serialNumber">
                                                    <td class="align-middle" x-text="item.serialNumber || 'N/A'"></td>
                                                </template>
                                                <template x-if="visibleColumns.link">
                                                    <td class="align-middle">
                                                        <a x-show="item.link && item.link !== 'N/A'" 
                                                           :href="item.link" 
                                                           target="_blank" 
                                                           class="text-primary text-decoration-none">
                                                            <i class="bi bi-link"></i>
                                                        </a>
                                                        <span x-show="!item.link || item.link === 'N/A'" class="text-muted">N/A</span>
                                                    </td>
                                                </template>
                                                <template x-if="visibleColumns.taxDeductible">
                                                    <td class="align-middle">
                                                        <span x-show="item.taxDeductible" 
                                                              class="badge bg-success">Yes</span>
                                                        <span x-show="!item.taxDeductible" 
                                                              class="badge bg-secondary">No</span>
                                                    </td>
                                                </template>
                                                <template x-if="visibleColumns.tags">
                                                    <td class="align-middle" x-text="item.tags || 'N/A'"></td>
                                                </template>
                                                <template x-if="visibleColumns.notes">
                                                    <td class="align-middle" x-text="item.notes || 'N/A'"></td>
                                                </template>
                                                <td class="align-middle">
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <button class="btn btn-outline-secondary"
                                                                type="button"
                                                                title="View Details"
                                                                @click="viewItem(item)">
                                                            <i class="bi bi-eye"></i>
                                                        </button>
                                                        <button class="btn btn-outline-secondary"
                                                                type="button"
                                                                title="Edit"
                                                                @click="editItem(item)">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <button class="btn btn-outline-danger"
                                                                type="button"
                                                                title="Delete"
                                                                @click="deleteItem(item)">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        </template>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            <div class="d-flex justify-content-between align-items-center p-3">
                                <div class="text-muted">
                                    Showing <span x-text="(currentPage - 1) * itemsPerPage + 1"></span> to 
                                    <span x-text="Math.min(currentPage * itemsPerPage, filteredItems.length)"></span> of
                                    <span x-text="filteredItems.length"></span> results
                                </div>
                                <nav>
                                    <ul class="pagination pagination-sm mb-0">
                                        <li class="page-item" :class="{ 'disabled': currentPage === 1 }">
                                            <a class="page-link" href="#" @click.prevent="goToPage(currentPage - 1)">Previous</a>
                                        </li>
                                        <template x-for="(page, index) in visiblePages" :key="`page-${index}`">
                                            <li class="page-item" :class="{ 'active': page === currentPage }">
                                                <a class="page-link" href="#" @click.prevent="page !== '...' && goToPage(page)" x-text="page"></a>
                                            </li>
                                        </template>
                                        <li class="page-item" :class="{ 'disabled': currentPage === totalPages }">
                                            <a class="page-link" href="#" @click.prevent="goToPage(currentPage + 1)">Next</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    <!-- Add Purchase Modal -->
    <div class="modal fade" id="inventoryModal" tabindex="-1" aria-labelledby="inventoryModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content" x-data="addPurchaseForm()">
                <div class="modal-header border-bottom">
                    <h5 class="modal-title" id="inventoryModalLabel">
                        <i :class="isEditMode ? 'bi bi-pencil-circle' : 'bi bi-plus-circle'" class="text-primary me-2"></i>
                        <span x-text="isEditMode ? 'Edit Purchase' : 'Add New Purchase'"></span>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <%- include('purchase-form.ejs') %>
                </div>
                <div class="modal-footer border-top">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" @click="savePurchase()">
                        <i class="bi bi-check-lg me-1"></i> <span x-text="isEditMode ? 'Update Purchase' : 'Save Purchase'"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>

            </div>
        </div>
    </div>
    <!-- View Purchase Details Modal -->
    <div class="modal fade" id="viewDetailsModal" tabindex="-1" aria-labelledby="viewDetailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content" x-data="viewPurchaseDetails()">
                <div class="modal-header bg-light border-bottom">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 d-flex align-items-center justify-content-center rounded-circle me-3" style="width: 38px; height: 38px;">
                            <i class="bi bi-eye text-primary fs-5"></i>
                        </div>
                        <div>
                            <h5 class="modal-title fw-bold text-dark" id="viewDetailsModalLabel">Purchase Details</h5>
                            <small class="text-muted" x-text="item.productName"></small>
                        </div>
                    </div>
                    <button type="button" class="btn-close me-2" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body pt-0 pb-4 px-4">
                    <div class="row g-4">
                        <!-- Product Images/Attachments Photo Slider -->
                        <div class="col-lg-4" x-show="item.photos && item.photos.length > 0" x-data="{ currentPhotoIndex: 0 }" @keydown.arrow-left="currentPhotoIndex = (currentPhotoIndex - 1 + item.photos.length) % item.photos.length" @keydown.arrow-right="currentPhotoIndex = (currentPhotoIndex + 1) % item.photos.length" tabindex="0">
                            <div class="card h-100 border-0 bg-light-subtle">
                                <!-- Horizontal Layout: Image + Controls -->
                                <div class="d-flex flex-column" style="height: 100%;">
                                    <!-- Main Photo Display -->
                                    <div style="flex: 1; min-height: 200px; position: relative; background-color: #f5f5f5; overflow: hidden;">
                                        <img x-show="item.photos && item.photos[currentPhotoIndex]"
                                             :src="item.photos && item.photos[currentPhotoIndex] ? `/api/files/file/${item.photos[currentPhotoIndex].id}/download/` : ''"
                                             :alt="item.photos && item.photos[currentPhotoIndex] ? item.photos[currentPhotoIndex].filename : 'Photo'"
                                             style="width: 100%; height: 100%; object-fit: contain;">
                                        <!-- Photo Counter -->
                                        <div x-show="item.photos && item.photos[currentPhotoIndex]" style="position: absolute; top: 8px; right: 8px; background: rgba(0,0,0,0.7); color: white; padding: 4px 8px; border-radius: 4px; font-size: 11px;">
                                            <span x-text="currentPhotoIndex + 1"></span> / <span x-text="item.photos ? item.photos.length : 0"></span>
                                        </div>
                                    </div>

                                    <!-- Controls Section -->
                                    <div class="card-body p-2">
                                        <!-- Navigation Buttons -->
                                        <div x-show="item.photos && item.photos.length > 1" class="d-flex justify-content-between align-items-center gap-2 mb-2">
                                            <button class="btn btn-sm btn-outline-secondary" style="flex: 0.3;" @click="currentPhotoIndex = (currentPhotoIndex - 1 + item.photos.length) % item.photos.length">
                                                <i class="bi bi-chevron-left"></i>
                                            </button>
                                            <span style="font-size: 11px; color: #666; flex: 1; text-align: center; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" x-text="item.photos && item.photos[currentPhotoIndex] ? item.photos[currentPhotoIndex].filename : ''"></span>
                                            <button class="btn btn-sm btn-outline-secondary" style="flex: 0.3;" @click="currentPhotoIndex = (currentPhotoIndex + 1) % item.photos.length">
                                                <i class="bi bi-chevron-right"></i>
                                            </button>
                                        </div>

                                        <!-- Thumbnail Strip -->
                                        <div x-show="item.photos && item.photos.length > 1" style="overflow-x: auto; max-height: 80px;">
                                            <div class="d-flex gap-1" style="flex-wrap: nowrap;">
                                                <template x-for="(photo, index) in item.photos || []" :key="photo.id">
                                                    <img :src="`/api/files/file/${photo.id}/download/`"
                                                         :alt="photo.filename"
                                                         style="width: 50px; height: 50px; object-fit: cover; cursor: pointer; border: 2px solid transparent; border-radius: 3px; flex-shrink: 0;"
                                                         :class="{'border-primary': index === currentPhotoIndex}"
                                                         @click="currentPhotoIndex = index">
                                                </template>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Product Details -->
                        <div class="col-lg" :class="{'col-lg-8': item.files && item.files.some(f => f.file_type && f.file_type.toLowerCase() === 'photo'), 'col-lg-12': !(item.files && item.files.some(f => f.file_type && f.file_type.toLowerCase() === 'photo'))}">
                            <div class="card border-0 bg-light-subtle">
                                <div class="card-body p-3">
                                    <h3 class="fw-bold text-dark mb-4" x-text="`${item.brand || ''} ${item.productName || ''} ${item.modelNumber || ''}`.trim()"></h3>

                                    <div class="row g-3">
                                        <!-- Product Information -->
                                        <div class="col-md-6">
                                            <div class="card h-100 border shadow-sm" x-show="item.brand || item.retailer || (item.modelNumber && item.modelNumber !== 'N/A' && item.modelNumber.trim() !== '') || (item.serialNumber && item.serialNumber !== 'N/A' && item.serialNumber.trim() !== '')">
                                                <div class="card-header bg-transparent border-0 pb-0">
                                                    <h6 class="fw-semibold text-primary mb-2">
                                                        <i class="bi bi-box-seam me-2"></i>Product Info
                                                    </h6>
                                                </div>
                                                <div class="card-body pt-0">
                                                    <div class="d-flex justify-content-between border-bottom pb-2 mb-2" x-show="item.brand">
                                                        <span class="text-muted">Brand</span>
                                                        <span class="fw-medium" x-text="item.brand"></span>
                                                    </div>
                                                    <div class="d-flex justify-content-between border-bottom pb-2 mb-2" x-show="item.retailer">
                                                        <span class="text-muted">Retailer</span>
                                                        <span class="fw-medium" x-text="item.retailer"></span>
                                                    </div>
                                                    <template x-if="item.modelNumber && item.modelNumber !== 'N/A' && item.modelNumber.trim() !== ''">
                                                        <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                                                            <span class="text-muted">Model</span>
                                                            <span class="fw-medium" x-text="item.modelNumber"></span>
                                                        </div>
                                                    </template>
                                                    <template x-if="item.serialNumber && item.serialNumber !== 'N/A' && item.serialNumber.trim() !== ''">
                                                        <div class="d-flex justify-content-between">
                                                            <span class="text-muted">Serial</span>
                                                            <span class="fw-medium" x-text="item.serialNumber"></span>
                                                        </div>
                                                    </template>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Purchase Information -->
                                        <div class="col-md-6">
                                            <div class="card h-100 border shadow-sm" x-show="item.purchaseDate || item.price || item.quantity || (item.link && item.link !== 'N/A' && item.link.trim() !== '')">
                                                <div class="card-header bg-transparent border-0 pb-0">
                                                    <h6 class="fw-semibold text-primary mb-2">
                                                        <i class="bi bi-calendar-check me-2"></i>Purchase Info
                                                    </h6>
                                                </div>
                                                <div class="card-body pt-0">
                                                    <div class="d-flex justify-content-between border-bottom pb-2 mb-2" x-show="item.purchaseDate">
                                                        <span class="text-muted">Date</span>
                                                        <span class="fw-medium" x-text="item.purchaseDate"></span>
                                                    </div>
                                                    <div class="d-flex justify-content-between border-bottom pb-2 mb-2" x-show="item.price">
                                                        <span class="text-muted">Price</span>
                                                        <span class="fw-bold text-success fs-6" x-text="'$' + (item.price || '0.00')"></span>
                                                    </div>
                                                    <div class="d-flex justify-content-between border-bottom pb-2 mb-2" x-show="item.quantity && item.quantity != 1">
                                                        <span class="text-muted">Quantity</span>
                                                        <span class="fw-medium" x-text="item.quantity"></span>
                                                    </div>
                                                    <template x-if="item.link && item.link !== 'N/A' && item.link.trim() !== ''">
                                                        <div class="d-flex justify-content-between">
                                                            <span class="text-muted">Link</span>
                                                            <a :href="item.link" target="_blank" class="text-primary text-decoration-none">
                                                                <i class="bi bi-box-arrow-up-right me-1"></i>View
                                                            </a>
                                                        </div>
                                                    </template>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Warranty & Returns -->
                                    <div class="row mt-3" x-show="item.warrantyExpiry || item.returnDeadline || item.returnPolicy">
                                        <div class="col-md-6">
                                            <div class="card h-100 border shadow-sm">
                                                <div class="card-header bg-transparent border-0 pb-0">
                                                    <h6 class="fw-semibold text-primary mb-2">
                                                        <i class="bi bi-shield-check me-2"></i>Warranty
                                                    </h6>
                                                </div>
                                                <div class="card-body pt-0">
                                                    <template x-if="item.warrantyExpiry">
                                                        <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                                                            <span class="text-muted">Warranty Expiry</span>
                                                            <span class="fw-medium" x-text="item.warrantyExpiry"></span>
                                                        </div>
                                                    </template>
                                                    <template x-if="item.returnDeadline">
                                                        <div class="d-flex justify-content-between" x-show="!item.returnPolicy" :class="item.returnPolicy ? 'border-bottom pb-2 mb-2' : ''">
                                                            <span class="text-muted">Return Deadline</span>
                                                            <span class="fw-medium" x-text="item.returnDeadline"></span>
                                                        </div>
                                                    </template>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6" x-show="item.returnPolicy">
                                            <div class="card h-100 border shadow-sm">
                                                <div class="card-header bg-transparent border-0 pb-0">
                                                    <h6 class="fw-semibold text-primary mb-2">
                                                        <i class="bi bi-arrow-repeat me-2"></i>Return Policy
                                                    </h6>
                                                </div>
                                                <div class="card-body pt-0">
                                                    <div class="lh-base text-muted" x-text="item.returnPolicy"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Additional Info -->
                                    <div class="row mt-3" x-show="(item.tags && item.tags !== 'N/A' && item.tags.trim() !== '') || (item.taxDeductible !== undefined && item.taxDeductible !== null)">
                                        <div class="col-md-6" x-show="item.tags && item.tags !== 'N/A' && item.tags.trim() !== ''">
                                            <div class="card border shadow-sm">
                                                <div class="card-header bg-transparent border-0 pb-0">
                                                    <h6 class="fw-semibold text-primary mb-2">
                                                        <i class="bi bi-tags me-2"></i>Tags
                                                    </h6>
                                                </div>
                                                <div class="card-body pt-0">
                                                    <template x-if="item.tags && item.tags !== 'N/A' && item.tags.trim() !== ''">
                                                        <template x-for="tag in item.tags.split(',')">
                                                            <span class="badge bg-primary me-1 mb-1" 
                                                                  x-text="tag.trim()" 
                                                                  x-show="tag.trim() !== '' && tag.trim().length > 0"></span>
                                                        </template>
                                                    </template>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6" x-show="item.taxDeductible">
                                            <div class="card border shadow-sm">
                                                <div class="card-header bg-transparent border-0 pb-0">
                                                    <h6 class="fw-semibold text-primary mb-2">
                                                        <i class="bi bi-cash-stack me-2"></i>Tax Info
                                                    </h6>
                                                </div>
                                                <div class="card-body pt-0">
                                                    <span x-show="item.taxDeductible" class="badge bg-success">Tax Deductible</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Notes Section -->
                                    <div class="card border shadow-sm mt-3" x-show="item.notes">
                                        <div class="card-header bg-transparent border-0 pb-0">
                                            <h6 class="fw-semibold text-primary mb-2">
                                                <i class="bi bi-journal-text me-2"></i>Notes
                                            </h6>
                                        </div>
                                        <div class="card-body pt-0">
                                            <p class="text-muted fst-italic" x-text="item.notes"></p>
                                        </div>
                                    </div>

                                    <!-- Documents Section (Receipts, Manuals, Warranties) -->
                                    <div class="card border shadow-sm mt-3" x-show="(item.receipts && item.receipts.length > 0) || (item.manuals && item.manuals.length > 0) || (item.warranties && item.warranties.length > 0)">
                                        <div class="card-header bg-transparent border-0 pb-0">
                                            <h6 class="fw-semibold text-primary mb-0">
                                                <i class="bi bi-files me-2"></i>Documents
                                            </h6>
                                        </div>
                                        <div class="card-body pt-0">
                                            <!-- Receipts Subsection -->
                                            <div x-show="item.receipts && item.receipts.length > 0">
                                                <h6 class="fw-semibold text-secondary mb-2 mt-3">
                                                    <i class="bi bi-receipt me-1"></i>Receipts
                                                </h6>
                                                <div class="row g-3 mb-3">
                                                    <template x-for="file in item.receipts" :key="file.id">
                                                        <div class="col-md-6 col-lg-4">
                                                            <a :href="`/api/files/file/${file.id}/download/`" target="_blank" class="text-decoration-none">
                                                                <div class="card h-100 border">
                                                                    <div class="card-body">
                                                                        <div class="d-flex justify-content-between align-items-start">
                                                                            <div class="flex-grow-1">
                                                                                <h6 class="card-title mb-1 text-truncate" :title="file.filename" x-text="getShortenedFileName(file.filename)"></h6>
                                                                                <small class="text-muted" x-text="file.file_type.toUpperCase()"></small>
                                                                            </div>
                                                                        </div>
                                                                        <small class="text-muted" x-text="formatFileSize(file.file_size)"></small>
                                                                    </div>
                                                                </div>
                                                            </a>
                                                        </div>
                                                    </template>
                                                </div>
                                            </div>

                                            <!-- Manuals Subsection -->
                                            <div x-show="item.manuals && item.manuals.length > 0">
                                                <h6 class="fw-semibold text-secondary mb-2">
                                                    <i class="bi bi-journals me-1"></i>Manuals
                                                </h6>
                                                <div class="row g-3 mb-3">
                                                    <template x-for="file in item.manuals" :key="file.id">
                                                        <div class="col-md-6 col-lg-4">
                                                            <a :href="`/api/files/file/${file.id}/download/`" target="_blank" class="text-decoration-none">
                                                                <div class="card h-100 border">
                                                                    <div class="card-body">
                                                                        <div class="d-flex justify-content-between align-items-start">
                                                                            <div class="flex-grow-1">
                                                                                <h6 class="card-title mb-1 text-truncate" :title="file.filename" x-text="getShortenedFileName(file.filename)"></h6>
                                                                                <small class="text-muted" x-text="file.file_type.toUpperCase()"></small>
                                                                            </div>
                                                                        </div>
                                                                        <small class="text-muted" x-text="formatFileSize(file.file_size)"></small>
                                                                    </div>
                                                                </div>
                                                            </a>
                                                        </div>
                                                    </template>
                                                </div>
                                            </div>

                                            <!-- Warranties Subsection -->
                                            <div x-show="item.warranties && item.warranties.length > 0">
                                                <h6 class="fw-semibold text-secondary mb-2">
                                                    <i class="bi bi-shield-check me-1"></i>Warranties
                                                </h6>
                                                <div class="row g-3">
                                                    <template x-for="file in item.warranties" :key="file.id">
                                                        <div class="col-md-6 col-lg-4">
                                                            <a :href="`/api/files/file/${file.id}/download/`" target="_blank" class="text-decoration-none">
                                                                <div class="card h-100 border">
                                                                    <div class="card-body">
                                                                        <div class="d-flex justify-content-between align-items-start">
                                                                            <div class="flex-grow-1">
                                                                                <h6 class="card-title mb-1 text-truncate" :title="file.filename" x-text="getShortenedFileName(file.filename)"></h6>
                                                                                <small class="text-muted" x-text="file.file_type.toUpperCase()"></small>
                                                                            </div>
                                                                        </div>
                                                                        <small class="text-muted" x-text="formatFileSize(file.file_size)"></small>
                                                                    </div>
                                                                </div>
                                                            </a>
                                                        </div>
                                                    </template>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-light border-top-0">
                    <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">
                        <i class="bi bi-x me-2"></i>Close
                    </button>
                    <button type="button" class="btn btn-primary px-4" @click="editPurchaseItem();">
                        <i class="bi bi-pencil me-2"></i>Edit Details
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bulk Update Modal -->
    <div class="modal fade" id="bulkUpdateModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Bulk Update Items</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Filter Items</label>
                        <select class="form-select">
                            <option value="">All items</option>
                            <option value="active">Only active items</option>
                            <option value="warranty">Only warranty items</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Update Items</button>
                </div>
            </div>
        </div>
    </div>

    
    <!-- Main Scripts -->
    <script type="module" src="./scripts/main.js"></script>
