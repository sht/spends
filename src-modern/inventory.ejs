<% const title = 'Inventory'; %>
<% const page = 'inventory'; %>

            <div class="container-fluid p-4 p-lg-5">
                
                <!-- Page Header -->
                <div class="d-flex justify-content-between align-items-center mb-4 mb-lg-5">
                    <div>
                        <h1 class="h3 mb-0">Inventory Management</h1>
                        <p class="text-muted mb-0">Manage your inventory, warranties, and purchases</p>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#inventoryModal">
                            <i class="bi bi-plus-lg me-2"></i>Add New Purchase
                        </button>
                    </div>
                </div>

                <!-- Inventory Management Container -->
                <div x-data="inventoryTable" x-init="init()">

                    <!-- Inventory Table -->
                    <div class="card">
                        <div class="card-header">
                            <div class="row align-items-center py-3">
                                <div class="col">
                                    <h5 class="card-title mb-0">Inventory</h5>
                                </div>
                                <div class="col-auto">
                                    <div class="d-flex gap-2">
                                        <!-- Search -->
                                        <div class="position-relative">
                                            <input type="search"
                                                   class="form-control form-control-sm"
                                                   placeholder="Search inventory..."
                                                   x-model="searchQuery"
                                                   @input="filterInventory()"
                                                   style="width: 200px; padding: 0.75rem 0.5rem;">
                                            <i class="bi bi-search position-absolute top-50 end-0 translate-middle-y me-2 text-muted"></i>
                                        </div>

                                        <!-- Status Filter -->
                                        <select class="form-select form-select-sm"
                                                x-model="statusFilter"
                                                @change="filterInventory()"
                                                style="width: 150px; padding: 0.75rem 0.5rem;">
                                            <option value="">All Status</option>
                                            <option value="ordered">Ordered</option>
                                            <option value="received">Received</option>
                                        </select>

                                        <!-- Date Range -->
                                        <select class="form-select form-select-sm"
                                                x-model="dateFilter"
                                                @change="filterInventory()"
                                                style="width: 150px; padding: 0.75rem 0.5rem;">
                                            <option value="">All Dates</option>
                                            <option value="today">Today</option>
                                            <option value="week">This Week</option>
                                            <option value="month">This Month</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <!-- Bulk Actions Bar -->
                            <div class="bulk-actions-bar p-3 bg-light border-bottom" x-show="selectedItems.length > 0" x-transition>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted">
                                        <span x-text="selectedItems.length"></span> item(s) selected
                                    </span>
                                </div>
                            </div>

                            <!-- Table -->
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="sortable">#</th>
                                            <th>Product</th>
                                            <th @click="sortBy('price')" class="sortable">Price</th>
                                            <th>Status</th>
                                            <th @click="sortBy('purchaseDate')" class="sortable">Date</th>
                                            <th style="width: 100px;">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <template x-for="(item, index) in paginatedItems" :key="item.id">
                                            <tr>
                                                <td class="fw-medium text-primary" x-text="(currentPage - 1) * itemsPerPage + index + 1"></td>
                                                <td>
                                                    <div class="fw-medium" x-text="item.name"></div>
                                                    <small class="text-muted" x-text="item.brand"></small>
                                                </td>
                                                <td class="fw-medium" x-text="`$${item.price.toFixed(2)}`"></td>
                                                <td>
                                                    <span class="badge"
                                                          :class="{
                                                              'bg-primary': item.status === 'ordered',
                                                              'bg-success': item.status === 'received'
                                                          }"
                                                          x-text="item.status.charAt(0).toUpperCase() + item.status.slice(1)"></span>
                                                </td>
                                                <td x-text="item.purchaseDate"></td>
                                                <td>
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <button class="btn btn-outline-secondary"
                                                                type="button"
                                                                title="View Details"
                                                                @click="viewItem(item)">
                                                            <i class="bi bi-eye"></i>
                                                        </button>
                                                        <button class="btn btn-outline-secondary"
                                                                type="button"
                                                                title="Edit"
                                                                @click="editItem(item)">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <button class="btn btn-outline-danger"
                                                                type="button"
                                                                title="Delete"
                                                                @click="deleteItem(item)">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        </template>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            <div class="d-flex justify-content-between align-items-center p-3">
                                <div class="text-muted">
                                    Showing <span x-text="(currentPage - 1) * itemsPerPage + 1"></span> to 
                                    <span x-text="Math.min(currentPage * itemsPerPage, filteredItems.length)"></span> of
                                    <span x-text="filteredItems.length"></span> results
                                </div>
                                <nav>
                                    <ul class="pagination pagination-sm mb-0">
                                        <li class="page-item" :class="{ 'disabled': currentPage === 1 }">
                                            <a class="page-link" href="#" @click.prevent="goToPage(currentPage - 1)">Previous</a>
                                        </li>
                                        <template x-for="(page, index) in visiblePages" :key="`page-${index}`">
                                            <li class="page-item" :class="{ 'active': page === currentPage }">
                                                <a class="page-link" href="#" @click.prevent="page !== '...' && goToPage(page)" x-text="page"></a>
                                            </li>
                                        </template>
                                        <li class="page-item" :class="{ 'disabled': currentPage === totalPages }">
                                            <a class="page-link" href="#" @click.prevent="goToPage(currentPage + 1)">Next</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
    <!-- Add Purchase Modal -->
    <div class="modal fade" id="inventoryModal" tabindex="-1" aria-labelledby="inventoryModalLabel" aria-hidden="true" data-bs-backdrop="false">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" x-data="addPurchaseForm()" @alpine:initialized="console.log('addPurchaseForm initialized')">
                <div class="modal-header border-bottom">
                    <h5 class="modal-title" id="inventoryModalLabel">
                        <i class="bi text-primary me-2" :class="{ 'bi-pencil-circle': isEditMode, 'bi-plus-circle': !isEditMode }"></i>
                        <span x-text="isEditMode ? 'Edit Purchase' : 'Add New Purchase'"></span>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" x-show="true">
                    <%- include('purchase-form.ejs') %>
                </div>
                <div class="modal-footer border-top">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" @click="savePurchase()" data-bs-dismiss="modal">
                        <i class="bi bi-check-lg me-1"></i> <span x-text="isEditMode ? 'Update Purchase' : 'Save Purchase'"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- View Purchase Details Modal -->
    <div class="modal fade" id="viewDetailsModal" tabindex="-1" aria-labelledby="viewDetailsModalLabel" aria-hidden="true" data-bs-backdrop="false">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header border-bottom">
                    <h5 class="modal-title" id="viewDetailsModalLabel">
                        <i class="bi bi-eye text-primary me-2"></i>
                        Purchase Details
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" x-data="viewPurchaseDetails()">
                    <!-- Product Details Section -->
                    <div class="mb-4">
                        <h6 class="text-muted text-uppercase small fw-semibold mb-3">Product Details</h6>

                        <div class="mb-3">
                            <label class="form-label">Product Name</label>
                            <div class="p-2 bg-light rounded" x-text="item.productName"></div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Retailer</label>
                                <div class="p-2 bg-light rounded" x-text="item.retailer"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Brand</label>
                                <div class="p-2 bg-light rounded" x-text="item.brand"></div>
                            </div>
                        </div>

                        <div class="row g-3 mt-0">
                            <div class="col-md-6">
                                <label class="form-label">Model Number</label>
                                <div class="p-2 bg-light rounded" x-text="item.modelNumber || 'N/A'"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Serial Number</label>
                                <div class="p-2 bg-light rounded" x-text="item.serialNumber || 'N/A'"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Purchase Details Section -->
                    <div class="mb-4">
                        <h6 class="text-muted text-uppercase small fw-semibold mb-3">Purchase Details</h6>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Purchase Date</label>
                                <div class="p-2 bg-light rounded" x-text="item.purchaseDate"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Price</label>
                                <div class="p-2 bg-light rounded" x-text="'$' + (item.price || '0.00')"></div>
                            </div>
                        </div>

                        <div class="row g-3 mt-0">
                            <div class="col-md-6">
                                <label class="form-label">Quantity</label>
                                <div class="p-2 bg-light rounded" x-text="item.quantity || '1'"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Product Link</label>
                                <div class="p-2 bg-light rounded">
                                    <a :href="item.link" target="_blank" x-show="item.link" class="text-decoration-none" x-text="item.link"></a>
                                    <span x-show="!item.link">N/A</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Warranty & Returns Section -->
                    <div class="mb-4">
                        <h6 class="text-muted text-uppercase small fw-semibold mb-3">Warranty & Returns</h6>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Warranty Expiry Date</label>
                                <div class="p-2 bg-light rounded" x-text="item.warrantyExpiry || 'N/A'"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Return Deadline</label>
                                <div class="p-2 bg-light rounded" x-text="item.returnDeadline || 'N/A'"></div>
                            </div>
                        </div>

                        <div class="mt-3">
                            <label class="form-label">Return Policy</label>
                            <div class="p-2 bg-light rounded" x-text="item.returnPolicy || 'N/A'"></div>
                        </div>
                    </div>

                    <!-- Tax & Tags Section -->
                    <div class="mb-4">
                        <h6 class="text-muted text-uppercase small fw-semibold mb-3">Additional Info</h6>

                        <div class="mb-3">
                            <label class="form-label">Tax Deductible</label>
                            <div class="p-2 bg-light rounded">
                                <span x-show="item.taxDeductible" class="badge bg-success">Yes</span>
                                <span x-show="!item.taxDeductible" class="badge bg-secondary">No</span>
                            </div>
                        </div>

                        <div>
                            <label class="form-label">Tags</label>
                            <div class="p-2 bg-light rounded" x-text="item.tags || 'N/A'"></div>
                        </div>
                    </div>

                    <!-- Notes Section -->
                    <div class="mb-4">
                        <h6 class="text-muted text-uppercase small fw-semibold mb-3">Notes</h6>
                        <div class="p-2 bg-light rounded" style="min-height: 80px;" x-text="item.notes || 'N/A'"></div>
                    </div>
                </div>
                <div class="modal-footer border-top">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal" @click="editItem()">
                        <i class="bi bi-pencil me-1"></i> Edit
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bulk Update Modal -->
    <div class="modal fade" id="bulkUpdateModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Bulk Update Items</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Update Status</label>
                        <select class="form-select">
                            <option value="">Select new status</option>
                            <option value="processing">Processing</option>
                            <option value="shipped">Shipped</option>
                            <option value="delivered">Delivered</option>
                            <option value="cancelled">Cancelled</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Filter Items</label>
                        <select class="form-select">
                            <option value="">All items</option>
                            <option value="active">Only active items</option>
                            <option value="warranty">Only warranty items</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Update Items</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Scripts -->
    <script type="module" src="./scripts/main.js"></script>
</body>
</html>
