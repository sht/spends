<% const title = 'Inventory'; %>
<% const page = 'inventory'; %>

            <div class="container-fluid p-4 p-lg-5">
                
                <!-- Page Header -->
                <div class="d-flex justify-content-between align-items-center mb-4 mb-lg-5">
                    <div>
                        <h1 class="h3 mb-0">Inventory Management</h1>
                        <p class="text-muted mb-0">Manage your inventory, warranties, and purchases</p>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#inventoryModal">
                            <i class="bi bi-plus-lg me-2"></i>Add New Purchase
                        </button>
                    </div>
                </div>

                <!-- Inventory Management Container -->
                <div x-data="inventoryTable" x-init="init()">

                    <!-- Inventory Table -->
                    <div class="card">
                        <div class="card-header">
                            <div class="row align-items-center py-3">
                                <div class="col">
                                    <h5 class="card-title mb-0">Inventory</h5>
                                </div>
                                <div class="col-auto">
                                    <div class="d-flex gap-2">
                                        <!-- Search -->
                                        <div class="position-relative">
                                            <input type="search"
                                                   class="form-control form-control-sm"
                                                   placeholder="Search inventory..."
                                                   x-model="searchQuery"
                                                   @input="filterInventory()"
                                                   style="width: 200px; padding: 0.75rem 0.5rem;">
                                            <i class="bi bi-search position-absolute top-50 end-0 translate-middle-y me-2 text-muted"></i>
                                        </div>

                                        <!-- Status Filter -->
                                        <select class="form-select form-select-sm"
                                                x-model="statusFilter"
                                                @change="filterInventory()"
                                                style="width: 150px; padding: 0.75rem 0.5rem;">
                                            <option value="">All Status</option>
                                            <option value="ordered">Ordered</option>
                                            <option value="received">Received</option>
                                        </select>

                                        <!-- Date Range -->
                                        <select class="form-select form-select-sm"
                                                x-model="dateFilter"
                                                @change="filterInventory()"
                                                style="width: 150px; padding: 0.75rem 0.5rem;">
                                            <option value="">All Dates</option>
                                            <option value="today">Today</option>
                                            <option value="week">This Week</option>
                                            <option value="month">This Month</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <!-- Bulk Actions Bar -->
                            <div class="bulk-actions-bar p-3 bg-light border-bottom" x-show="selectedItems.length > 0" x-transition>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted">
                                        <span x-text="selectedItems.length"></span> item(s) selected
                                    </span>
                                </div>
                            </div>

                            <!-- Table -->
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="sortable">#</th>
                                            <th>Product</th>
                                            <th @click="sortBy('price')" class="sortable">Price</th>
                                            <th>Status</th>
                                            <th @click="sortBy('purchaseDate')" class="sortable">Date</th>
                                            <th style="width: 100px;">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <template x-for="(item, index) in paginatedItems" :key="item.id">
                                            <tr>
                                                <td class="fw-medium text-primary" x-text="(currentPage - 1) * itemsPerPage + index + 1"></td>
                                                <td>
                                                    <div class="fw-medium" x-text="item.name"></div>
                                                    <small class="text-muted" x-text="item.brand"></small>
                                                </td>
                                                <td class="fw-medium" x-text="`$${item.price.toFixed(2)}`"></td>
                                                <td>
                                                    <span class="badge"
                                                          :class="{
                                                              'bg-primary': item.status === 'ordered',
                                                              'bg-success': item.status === 'received'
                                                          }"
                                                          x-text="item.status.charAt(0).toUpperCase() + item.status.slice(1)"></span>
                                                </td>
                                                <td x-text="item.purchaseDate"></td>
                                                <td>
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <button class="btn btn-outline-secondary"
                                                                type="button"
                                                                title="View Details"
                                                                @click="viewItem(item)">
                                                            <i class="bi bi-eye"></i>
                                                        </button>
                                                        <button class="btn btn-outline-secondary"
                                                                type="button"
                                                                title="Edit"
                                                                @click="editItem(item)">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <button class="btn btn-outline-danger"
                                                                type="button"
                                                                title="Delete"
                                                                @click="deleteItem(item)">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        </template>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            <div class="d-flex justify-content-between align-items-center p-3">
                                <div class="text-muted">
                                    Showing <span x-text="(currentPage - 1) * itemsPerPage + 1"></span> to 
                                    <span x-text="Math.min(currentPage * itemsPerPage, filteredItems.length)"></span> of
                                    <span x-text="filteredItems.length"></span> results
                                </div>
                                <nav>
                                    <ul class="pagination pagination-sm mb-0">
                                        <li class="page-item" :class="{ 'disabled': currentPage === 1 }">
                                            <a class="page-link" href="#" @click.prevent="goToPage(currentPage - 1)">Previous</a>
                                        </li>
                                        <template x-for="(page, index) in visiblePages" :key="`page-${index}`">
                                            <li class="page-item" :class="{ 'active': page === currentPage }">
                                                <a class="page-link" href="#" @click.prevent="page !== '...' && goToPage(page)" x-text="page"></a>
                                            </li>
                                        </template>
                                        <li class="page-item" :class="{ 'disabled': currentPage === totalPages }">
                                            <a class="page-link" href="#" @click.prevent="goToPage(currentPage + 1)">Next</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    <!-- Add Purchase Modal -->
    <div class="modal fade" id="inventoryModal" tabindex="-1" aria-labelledby="inventoryModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content" x-data="addPurchaseForm()">
                <div class="modal-header border-bottom">
                    <h5 class="modal-title" id="inventoryModalLabel">
                        <i :class="isEditMode ? 'bi bi-pencil-circle' : 'bi bi-plus-circle'" class="text-primary me-2"></i>
                        <span x-text="isEditMode ? 'Edit Purchase' : 'Add New Purchase'"></span>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <%- include('purchase-form.ejs') %>
                </div>
                <div class="modal-footer border-top">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" @click="savePurchase()">
                        <i class="bi bi-check-lg me-1"></i> <span x-text="isEditMode ? 'Update Purchase' : 'Save Purchase'"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- View Purchase Details Modal -->
    <div class="modal fade" id="viewDetailsModal" tabindex="-1" aria-labelledby="viewDetailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content" x-data="viewPurchaseDetails()">
                <div class="modal-header border-bottom">
                    <div>
                        <h5 class="modal-title mb-0" id="viewDetailsModalLabel">
                            <i class="bi bi-eye text-primary me-2"></i>
                            Purchase Details
                        </h5>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal" @click="editItem()">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </button>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                </div>
                <div class="modal-body" style="padding: 2rem;">
                    <!-- Product Hero Section -->
                    <div class="mb-5 pb-4 border-bottom">
                        <h3 class="fw-bold mb-2" x-text="item.productName" style="font-size: 1.75rem;"></h3>
                        <div class="d-flex gap-3 flex-wrap">
                            <div>
                                <small class="text-muted">Brand</small>
                                <div class="fw-semibold" x-text="item.brand || '—'"></div>
                            </div>
                            <div>
                                <small class="text-muted">Retailer</small>
                                <div class="fw-semibold" x-text="item.retailer || '—'"></div>
                            </div>
                            <div class="ms-auto text-end">
                                <small class="text-muted">Price</small>
                                <div class="fw-bold" style="font-size: 1.5rem; color: #28a745;" x-text="'$' + (item.price || '0.00')"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Product Details Section -->
                    <div class="mb-5">
                        <h6 class="fw-bold text-dark mb-3" style="border-bottom: 2px solid #f0f0f0; padding-bottom: 0.5rem;">
                            <i class="bi bi-box text-primary me-2"></i>Product Details
                        </h6>

                        <div class="detail-row mb-3">
                            <span class="text-muted fw-semibold" style="min-width: 150px;">Model Number:</span>
                            <span class="fw-semibold" x-text="item.modelNumber || '—'"></span>
                        </div>
                        <div class="detail-row mb-3">
                            <span class="text-muted fw-semibold" style="min-width: 150px;">Serial Number:</span>
                            <span class="fw-semibold" x-text="item.serialNumber || '—'"></span>
                        </div>
                    </div>

                    <!-- Purchase Details Section -->
                    <div class="mb-5">
                        <h6 class="fw-bold text-dark mb-3" style="border-bottom: 2px solid #f0f0f0; padding-bottom: 0.5rem;">
                            <i class="bi bi-calendar-event text-primary me-2"></i>Purchase Details
                        </h6>

                        <div class="detail-row mb-3">
                            <span class="text-muted fw-semibold" style="min-width: 150px;">Purchase Date:</span>
                            <span class="fw-semibold" x-text="item.purchaseDate"></span>
                        </div>
                        <div class="detail-row mb-3">
                            <span class="text-muted fw-semibold" style="min-width: 150px;">Quantity:</span>
                            <span class="fw-semibold" x-text="item.quantity || '1'"></span>
                        </div>
                        <div class="detail-row mb-3">
                            <span class="text-muted fw-semibold" style="min-width: 150px;">Product Link:</span>
                            <span x-show="item.link">
                                <a :href="item.link" target="_blank" class="text-primary text-decoration-none">
                                    <i class="bi bi-link-45deg me-1"></i><span x-text="item.link" style="word-break: break-all;"></span>
                                </a>
                            </span>
                            <span x-show="!item.link" class="text-muted">—</span>
                        </div>
                    </div>

                    <!-- Warranty & Returns Section -->
                    <div class="mb-5">
                        <h6 class="fw-bold text-dark mb-3" style="border-bottom: 2px solid #f0f0f0; padding-bottom: 0.5rem;">
                            <i class="bi bi-hourglass-split text-primary me-2"></i>Warranty & Returns
                        </h6>

                        <div class="detail-row mb-3">
                            <span class="text-muted fw-semibold" style="min-width: 150px;">Warranty Expiry:</span>
                            <span x-show="item.warrantyExpiry">
                                <span class="fw-semibold" x-text="item.warrantyExpiry"></span>
                            </span>
                            <span x-show="!item.warrantyExpiry" class="text-muted">—</span>
                        </div>
                        <div class="detail-row mb-3">
                            <span class="text-muted fw-semibold" style="min-width: 150px;">Return Deadline:</span>
                            <span x-show="item.returnDeadline">
                                <span class="fw-semibold" x-text="item.returnDeadline"></span>
                            </span>
                            <span x-show="!item.returnDeadline" class="text-muted">—</span>
                        </div>
                        <div class="detail-row mb-3">
                            <span class="text-muted fw-semibold" style="min-width: 150px;">Return Policy:</span>
                            <span x-show="item.returnPolicy">
                                <span class="fw-semibold" x-text="item.returnPolicy"></span>
                            </span>
                            <span x-show="!item.returnPolicy" class="text-muted">—</span>
                        </div>
                    </div>

                    <!-- Additional Info Section -->
                    <div class="mb-5">
                        <h6 class="fw-bold text-dark mb-3" style="border-bottom: 2px solid #f0f0f0; padding-bottom: 0.5rem;">
                            <i class="bi bi-info-circle text-primary me-2"></i>Additional Info
                        </h6>

                        <div class="detail-row mb-3">
                            <span class="text-muted fw-semibold" style="min-width: 150px;">Tax Deductible:</span>
                            <span>
                                <span x-show="item.taxDeductible" class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Yes
                                </span>
                                <span x-show="!item.taxDeductible" class="badge bg-light text-dark">
                                    <i class="bi bi-x-circle me-1"></i>No
                                </span>
                            </span>
                        </div>
                        <div class="detail-row mb-3">
                            <span class="text-muted fw-semibold" style="min-width: 150px;">Tags:</span>
                            <span x-show="item.tags">
                                <span class="fw-semibold" x-text="item.tags"></span>
                            </span>
                            <span x-show="!item.tags" class="text-muted">—</span>
                        </div>
                    </div>

                    <!-- Notes Section -->
                    <div class="mb-3">
                        <h6 class="fw-bold text-dark mb-3" style="border-bottom: 2px solid #f0f0f0; padding-bottom: 0.5rem;">
                            <i class="bi bi-chat-left-text text-primary me-2"></i>Notes
                        </h6>
                        <div class="p-3 bg-light rounded" style="min-height: 100px;">
                            <p class="mb-0" x-text="item.notes || 'No notes added'"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bulk Update Modal -->
    <div class="modal fade" id="bulkUpdateModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Bulk Update Items</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Update Status</label>
                        <select class="form-select">
                            <option value="">Select new status</option>
                            <option value="processing">Processing</option>
                            <option value="shipped">Shipped</option>
                            <option value="delivered">Delivered</option>
                            <option value="cancelled">Cancelled</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Filter Items</label>
                        <select class="form-select">
                            <option value="">All items</option>
                            <option value="active">Only active items</option>
                            <option value="warranty">Only warranty items</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Update Items</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Scripts -->
    <script type="module" src="./scripts/main.js"></script>
